{% extends 'base.html.twig' %}

{% block title %}Stack{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Stack "{{ stack }}"</h1>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" href="{{ path('app_stack_edit', {'id': stack.id}) }}">Modifier</a>
            {{ include('stack/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('app_stack_index') }}">Retour à la liste des stacks</a>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Number</th>
            <td>{{ stack.number }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ stack.title }}</td>
        </tr>
        <tr>
            <th>Icone</th>
            <td>
                {% if stack.icon %}
                    <img src="{{ asset(upload_stack_dir~stack.icon) }}" alt="{{ stack.title }}" style="max-width: 100px;">
                {% else %}
                    Aucune icône
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Couleur</th>
            <td>{{ stack.color }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
