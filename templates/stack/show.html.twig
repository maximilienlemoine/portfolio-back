{% block title %}Stack{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Stack "{{ stack.id }} - {{ stack.title }}"</h1>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" href="{{ path('app_stack_edit', {'id': stack.id}) }}">Modifier</a>
            {{ include('stack/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('app_stack_index') }}">Retour Ã  la liste des stacks</a>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ stack.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ stack.title }}</td>
        </tr>
        <tr>
            <th>Icone</th>
            <td>{{ stack.icon }}</td>
        </tr>
        <tr>
            <th>Couleur</th>
            <td>{{ stack.color }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
