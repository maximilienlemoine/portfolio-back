{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Projet "{{ project.id }} - {{ project.title }}"</h1>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" href="{{ path('app_project_edit', {'id': project.id}) }}">Modifier</a>
            {{ include('project/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('app_project_index') }}">Retour Ã  la liste des projets</a>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Lien du projet</th>
                <td><a target="_blank" href="{{ project.projectLink }}">{{ project.projectLink }}</a></td>
            </tr>
            <tr>
                <th>Lien du code source</th>
                <td><a target="_blank" href="{{ project.sourceCodeLink }}">{{ project.sourceCodeLink }}</a></td>
            </tr>
        </tbody>
    </table>

{% endblock %}
