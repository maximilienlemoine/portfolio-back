{% extends 'base.html.twig' %}

{% block title %}Objectifs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Objectifs</h1>
        <a class="btn btn-primary" href="{{ path('app_goal_new') }}">Nouvel objectif</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for goal in goals %}
            <tr>
                <td>{{ goal.id }}</td>
                <td>{{ goal.title }}</td>
                <td>
                    <a href="{{ path('app_goal_show', {'id': goal.id}) }}">DÃ©tails</a>
                    <a href="{{ path('app_goal_edit', {'id': goal.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun objectif</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
