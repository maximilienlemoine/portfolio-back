{% extends 'base.html.twig' %}

{% block title %}Objectifs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Objectif "{{ goal.id }} - {{ goal.title }}"</h1>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" href="{{ path('app_goal_edit', {'id': goal.id}) }}">Modifier</a>
            {{ include('goal/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('app_goal_index') }}">Retour à la liste des objectifs</a>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ goal.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ goal.title }}</td>
        </tr>
        <tr>
            <th>Project</th>
            <td>
                {% for project in goal.projects %}
                    <a href="{{ path('app_project_show', {'id': project.id}) }}">{{ project.title }}</a>
                    {% if not loop.last %}<br> {% endif %}
                {% else %}
                    Aucun projet lié
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
