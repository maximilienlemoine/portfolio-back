{% extends 'base.html.twig' %}

{% block title %}Compétence{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Compétence "{{ skill.id }} - {{ skill.title }}"</h1>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" href="{{ path('app_skill_edit', {'id': skill.id}) }}">Modifier</a>
            {{ include('skill/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('app_skill_index') }}">Retour à la liste des compétences</a>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ skill.title }}</td>
            </tr>
            <tr>
                <th>Icône</th>
                <td>
                    {% if skill.icon %}
                        <img src="{{ upload_skill_dir~skill.icon }}" alt="{{ skill.title }}" style="max-width: 100px;">
                    {% else %}
                        Aucune icône
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Stacks</th>
                <td>
                    {% include 'stack/_read.html.twig' with {'stacks' : skill.stacks} %}
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
